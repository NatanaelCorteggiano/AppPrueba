@model AppPrueba.Models.Provincia

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Provincia</h4>
<hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="boton-paises" class="control-label">Pais</label>
                    <select asp-for="PaisId" id="paises" class="form-control"></select>                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>

    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("ListaPaises","Pais")',
            data: "{}",
            success: function (data) {
                
                var s = '<option value = "-1"> Seleccione el Pais</option>';
                for (var i = 0; i < data.length; i++) {
                    s += '<option value="' + data[i].id + '">' + data[i].nombre + '</option>';
                }
                $("#paises").html(s);
                console.log(data);
            }
        });
    });

</script>